  <body>
    <h1>Skate Park</h1>

    <div class="py-4">
      <h2>Datos del perfil</h2>
      <hr class="w-50"/>

      <form action="/skaterEdit" method="POST" enctype="multipart/form-data">
        <div class="form-group row w-50 m-auto">
          <div class="form-group col-12 col-sm-6">
            <label>Email</label>
            <input
              class="form-control m-auto" disabled id="email" value=""/>
          </div>
          <div class="form-group col-12 col-sm-6 d-none">
            <input
              class="form-control m-auto d-none" type="hidden" name="correo" id="email2" value=""/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Nombre</label>
            <input class="form-control m-auto" id="nombre" value="" name="name"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Password</label>
            <input
              type="password"
              class="form-control m-auto"
              id="password1"
              value=""
              name="pass1"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Repita la password</label>
            <input
              type="password"
              class="form-control m-auto"
              id="password2"
              value=""
              name="pass2"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>AÃ±os de experiencia</label>
            <input class="form-control m-auto" type="number" id="experiencia" value="" name="exp"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Especialidad</label>
            <input class="form-control m-auto" id="especialidad" value="" name="esp"/>
          </div>
        </div>
        <div class="mb-1">
          <button class="btn btn-primary" type="submit">Actualizar</button>
        </div>
        <div>
        </div>
      </form>
      <button class="btn btn-danger" onclick="eliminarSkater()" id="verificacion2" value="" name="token">Eliminar cuenta</button>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  </body>
<script>
  let url = "https://alejandro-prueba.herokuapp.com/skater";
  const token = "{{ token }}"
  const email = "{{ email }}"
  const nombre = "{{ nombre }}"
  const password = "{{ password }}"
  const experiencia = "{{ experiencia }}"
  const especialidad = "{{ especialidad }}"
  console.log(token)

  window.onload = getData();

  function getData() {
    document.getElementById('email').value = email
    document.getElementById('email2').value = email
    document.getElementById('nombre').value = nombre
    document.getElementById('password1').value = password
    document.getElementById('password2').value = password
    document.getElementById('experiencia').value = experiencia
    document.getElementById('especialidad').value = especialidad
    document.getElementById('verificacion2').value = token
  }

  function eliminarSkater() {
    axios.delete(url + "/" + email).then(() => {
      alert(`Usuario ${email} eliminado con exito`);
      location.replace("https://alejandro-prueba.herokuapp.com/Login")
    });
  }
</script>
